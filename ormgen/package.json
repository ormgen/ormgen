{
	"name": "ormgen",
	"version": "0.0.7",
	"repository": "https://github.com/ormgen/ormgen",
	"main": "dist/index.js",
	"license": "MIT",
	"packageManager": "yarn@4.1.1",
	"files": [
		"dist",
		"dist.cli"
	],
	"bin": "dist.cli/index.js",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"postinstall": "node dist.cli/setup.js || exit 0",
		"dev:src": "yarn build:src --watch",
		"dev:cli": "yarn build:cli --watch",
		"build": "yarn build:src && yarn build:cli",
		"build:src": "tsup-node",
		"build:cli": "tsup-node --config tsup.config.cli.ts",
		"deploy": "npm run build && npm publish",
		"deploy:patch": "npm version patch && npm run deploy",
		"test:types": "tsc --noEmit",
		"test:types:watch": "tsc --noEmit --watch"
	},
	"devDependencies": {
		"@prisma/client": "^5.11.0",
		"@types/node": "^20.11.28",
		"@types/yargs": "^17.0.32",
		"fast-glob": "^3.3.2",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"typescript": "^5.4.2",
		"zod": "^3.22.4"
	},
	"dependencies": {
		"@amono/find-up": "^0.0.5",
		"case-anything": "^2.1.13",
		"yargs": "^17.7.2"
	},
	"peerDependencies": {
		"@prisma/client": "*"
	}
}
