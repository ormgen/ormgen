datasource db {
	provider = "postgresql"
	url = env("DATABASE_URL")
}
generator client {
	provider = "prisma-client-js"
}
enum ORDER_STATUS {
	ORDERED
	SHIPPED
}
enum GLOBAL_ENUM {
	A
	B
	C
}
model Order {
uid String @id
status ORDER_STATUS 
orderDate DateTime 
totalPrice Int @default(0)
user User @relation(fields: [userUid], references: [uid], onDelete: Restrict)
}
model OrderItem {
uid String @id
order Order @relation(fields: [orderUid], references: [uid], onDelete: Cascade)
product Product @relation(fields: [productUid], references: [uid], onDelete: Restrict)
quantity Int 
}
model Product {
uid String @id
name String 
description String 
price Int 
stockQuantity Int 
sku String @unique
attributes Json 
createdAt DateTime 
}
model ProductCategory {
uid String @id
name String @unique
description String 
}
model ProductCategoryOnProduct {
product Product @relation(fields: [productUid], references: [uid], onDelete: Cascade)
productCategory ProductCategory @relation(fields: [productCategoryUid], references: [uid], onDelete: Cascade)
}
model Review {
uid String @id
rating Int 
comment String 
createdAt DateTime 
user User @relation(fields: [userUid], references: [uid], onDelete: Cascade)
}
model User {
uid String @id
email String @unique
name String 
passwordHash String 
lastLogin DateTime 
createdAt DateTime 
updatedAt DateTime 
}